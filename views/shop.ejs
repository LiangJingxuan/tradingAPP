    <% include script.ejs %>
    <script src="/layout/js/jqpaginator.min.js"></script>
    <style>
        .first a,.prev a,.next a,.last a{width: 64px !important;}
        .actives a{cursor: text}
        .actives a:hover{color: #ffffff !important;}
    </style>
    <script>
        var signId='<%=signId%>', sid='', hrefId='';
        location.href.search('sid')>-1?sid=location.href.split('sid')[1].split('=')[1]:sid='';

        // 设置跳转地址
        signId==='goods'?hrefId='/goods':hrefId='/product';

        console.log(hrefId)

        // 分页及参数设置
        try {
            $('#jqpaginatorId').jqPaginator({
                totalPages: parseInt('<%=goodsList.totalPage%>'),
                totalCounts: parseInt('<%=goodsList.totalRows%>'),
                visiblePages: 5,
                currentPage: parseInt('<%=goodsList.page%>'),
                activeClass: 'actives',
                disableClass: 'actives',

                first: '<li class="first"><a href='+hrefId+'"?page=1&sid='+sid+'">首页</a></li>',
                prev: '<li class="prev""><a href='+hrefId+'"?page={{page}}&sid='+sid+'">上一页</a></li>',
                next: '<li class="next"><a href='+hrefId+'"?page={{page}}&sid='+sid+'">下一页</a></li>',
                last: '<li class="last"><a href='+hrefId+'"?page={{totalPages}}&sid='+sid+'">尾页</a></li>',
                page: '<li class="page"><a href='+hrefId+'"?page={{page}}&sid='+sid+'">{{page}}</a></li>',
                onPageChange: function (num) {
                    // $('#text').html('当前第' + num + '页');
                    $('.actives a').removeAttr('href');
                }
            });
        }catch (e) {
            $('#info').css({'display':'block'})
        }
        // 类别默认选中设置
        if(sid){
            var item=$('.list li[data-value="'+hrefId+'?page=1&sid='+sid+'"]');
            $('#wideSelect option[value="'+hrefId+'?page=1&sid='+sid+'"]').attr('selected',true);
            item.addClass('selected').siblings('li').removeClass('selected');
            $('.nice-select .current').text(item.text());
        }else{
            var itemIndex=$('.list li[data-value="'+hrefId+'"]');
            $('#wideSelect option[value="'+hrefId+'"]').attr('selected',true);
            itemIndex.addClass('selected').siblings('li').removeClass('selected');
            $('.nice-select .current').text(itemIndex.text());
        }
    </script>
