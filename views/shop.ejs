                                 </div>
		                         <!--Toolbar Short Area End-->
		                    </div>
		                    <!--Grid & List View End-->
		                    <!--Shop Product Start-->
		                    <div class="shop-product">
		                        <div id="myTabContent-2" class="tab-content">
                                    <div id="list" class="tab-pane fade show active">
                                        <div class="product-list-view">
                                            <% for(let i=0,len=goodsList.dataList.length;i<len;i++){ %>
                                            <div class="product-list-item mb-40">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="single-product">
                                                            <div class="product-img img-full">
                                                                <a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>">
                                                                    <img src="<%=goodsList.dataList[i].goods_pic.split(',')[0]%>" alt="">
                                                                </a>
                                                                <% if(goodsList.dataList[i].nice){ %>
                                                                <span class="onsale">hot</span>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="product-content shop-list">
                                                            <h2><a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>"><%=goodsList.dataList[i].goods_name%></a></h2>
                                                            <div class="product-description">
                                                                <p><%=goodsList.dataList[i].goods_point%></p>
                                                            </div>
                                                            <div class="product-price">
                                                                <div class="price-box">
                                                                    <span class="regular-price">类别：
                                                                        <% if(signId==='shop'){ %>
