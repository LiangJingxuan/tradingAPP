	<div class="wrapper">
        <% include header.ejs %>
		<!--Shop Area Start-->
		<div class="shop-area mb-70">
		    <div class="container">
		        <div class="row">
		            <div class="col-lg-3 order-2 order-lg-1">
		                <!--Color Category Widget Start-->
