                                                                        <% }else { %>
                                                                            <a href="/product?page=1&sid=<%=goodsList.dataList[i].sid%>" style="color:#a43d21;"><%=goodsList.dataList[i].sname%></a>
                                                                        <% } %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="product-list-action">
                                                                <div class="add-btn">
                                                                    <a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>">+查看详情</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div id="info" style="display: none">当前类目下暂无数据！</div>
		                            <div id="grid" class="tab-pane fade">
		                                <div class="product-grid-view">
		                                    <div class="row">
                                                <% for(let i=0,len=goodsList.dataList.length;i<len;i++){ %>
		                                        <div class="col-md-4">
                                                    <div class="single-product mb-25">
                                                        <div class="product-img img-full">
                                                            <a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>">
                                                                <img src="<%=goodsList.dataList[i].goods_pic.split(',')[0]%>" alt="">
                                                            </a>
                                                            <% if(goodsList.dataList[i].nice){ %>
                                                            <span class="onsale">hot</span>
                                                            <% } %>
                                                        </div>
                                                        <div class="product-content">
                                                            <h2><a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>"><%=goodsList.dataList[i].goods_name%></a></h2>
                                                            <div class="product-price">
                                                                <div class="price-box">
                                                                    <span class="regular-price"><%=goodsList.dataList[i].sname%></span>
                                                                </div>
                                                                <div class="add-to-cart">
                                                                    <a href="/goodsDetail?id=<%=goodsList.dataList[i].id%>">+查看详情</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
		                                        </div>
                                                <% } %>
		                                    </div>
		                                </div>
		                            </div>
		                            <!--Pagination Start-->
		                            <div class="product-pagination">
		                                <ul id="jqpaginatorId"></ul>
		                            </div>
		                            <!--Pagination End-->
		                        </div>
		                    </div>
		                    <!--Shop Product End-->
		                </div>
		            </div>
		        </div>
		    </div>
		</div>
		<!--Shop Area End-->
