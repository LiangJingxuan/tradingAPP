                                                 <% } %>
                                             <% }else {%>
                                                 <option value="/product">全部类别</option>
                                                 <% for(let i=0,len=classify.length;i<len;i++){ %>
                                                 <option value="/product?page=1&sid=<%=classify[i].id%>"><%=classify[i].sname%></option>
                                                 <% } %>
